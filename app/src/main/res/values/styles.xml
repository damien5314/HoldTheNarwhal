<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="AppTheme" parent="AppTheme.Base"/>

  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <!-- to remove the default action -->
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item> <!-- For 2.x version -->
    <item name="android:windowActionModeOverlay">true</item>
  </style>

  <style name="ToolbarThemeLightText" parent="AppTheme">
    <item name="android:textColorPrimary">@color/icons</item>
    <item name="actionMenuTextColor">@color/icons</item>
    <item name="android:textColorSecondary">@color/icons</item>
  </style>

  <style name="LinkTitleTextView">
    <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
    <item name="android:textSize">@dimen/link_title_text_size</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>

  <style name="CommentLinkTitleTextView" parent="LinkTitleTextView">
    <item name="android:textSize">@dimen/comment_body_text_size</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="LinkMetadataTextViewLight">
    <item name="android:textSize">@dimen/link_metadata_text_size</item>
    <item name="android:textColor">@color/secondary_text</item>
  </style>

  <style name="LinkMetadataTextViewDark">
    <item name="android:textSize">@dimen/link_metadata_text_size</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
    <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:textColorPrimary">@color/icons</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:textColor">@color/icons</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="CustomAlertDialogStyle">
    <item name="android:bottomBright">@color/transparent</item>
    <item name="android:bottomDark">@color/transparent</item>
    <item name="android:bottomMedium">@color/transparent</item>
    <item name="android:centerBright">@color/transparent</item>
    <item name="android:centerDark">@color/transparent</item>
    <item name="android:centerMedium">@color/transparent</item>
    <item name="android:fullBright">@color/transparent</item>
    <item name="android:fullDark">@color/transparent</item>
    <item name="android:topBright">@color/transparent</item>
    <item name="android:topDark">@color/transparent</item>
  </style>
</resources>
