<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- to remove the default action -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version -->
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="ToolbarThemeLightText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:layout_width">@dimen/navigation_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">@dimen/navigation_drawer_elevation</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>

    <style name="NavigationDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_drawer_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/navigation_drawer_item_margin</item>
        <item name="android:paddingRight">@dimen/navigation_drawer_item_margin</item>
    </style>

    <style name="NavigationDrawerItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:color">@color/accent</item>
    </style>

    <style name="NavigationDrawerItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/navigation_drawer_item_text</item>
    </style>

    <style name="NavigationDrawerEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/navigation_drawer_item_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="LinkTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_title_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="LinkDomainTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_domain_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="GildedTextView" parent="LinkDomainTextView">
        <!-- Simply inherits from LinkDomainTextView for now -->
    </style>

    <style name="LinkScoreTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_score_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LinkAuthorTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_author_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LinkSubredditTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_subreddit_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LinkTimestampTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_timestamp_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LinkCommentCountTextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/link_comments_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LinkThumbnail">
        <item name="android:layout_width">@dimen/link_thumbnail_size</item>
        <item name="android:layout_height">@dimen/link_thumbnail_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

</resources>
