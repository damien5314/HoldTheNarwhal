<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeLight" parent="BaseThemeLight" />
    <style name="AppThemeDark" parent="BaseThemeDark" />

    <style name="ActivityThemeLightBg" parent="AppThemeLight">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ToolbarLight" parent="BaseThemeLight">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="actionMenuTextColor">@color/icons</item>
    </style>

    <style name="ToolbarDark" parent="BaseThemeDark">
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <!--<item name="android:background">?attr/colorPrimaryDark</item>-->
    </style>

    <style name="BaseThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- to remove the default action -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version -->
        <item name="android:windowActionModeOverlay">true</item>
        <!-- app background color -->
        <item name="android:windowBackground">?attr/windowBackgroundColor</item>
    </style>

    <style name="BaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- to remove the default action -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version -->
        <item name="android:windowActionModeOverlay">true</item>
        <!-- app background color -->
        <item name="android:windowBackground">?attr/windowBackgroundColor</item>
    </style>

    <style name="LinkMetadataTextViewLight">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="LinkMetadataTextViewDark">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">?attr/iconColor</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- FIXME This should use a text* attribute -->
        <item name="android:textColor">?attr/iconColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="TransparentTheme" parent="BaseThemeLight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogOverlay" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

</resources>
