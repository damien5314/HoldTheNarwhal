<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StandardThemeColors" parent="AppThemeLight">
        <!-- AppCompat theme attributes -->
        <item name="colorPrimary">@color/bluegrey100</item>
        <item name="colorPrimaryDark">@color/bluegrey700</item>
        <item name="colorAccent">@color/redA200</item>
        <!-- Custom attributes -->
        <item name="colorPrimaryLight">@color/bluegrey100</item>
        <item name="windowBackgroundColor">@color/bluegrey100</item>
        <item name="textColorPrimary">@color/gray900</item>
        <item name="textColorSecondary">@color/dim_gray</item>
        <item name="textColorInverse">@color/white</item>
        <item name="textColorHighlight">?attr/textColorPrimary</item>
        <item name="textColorLink">@color/link_color</item>
        <item name="dividerColor">@color/black_12pct</item>
        <item name="iconColor">@color/white</item>
        <item name="nsfwColor">@color/nsfw_tag_color</item>
        <item name="toolbarStyle">@style/ToolbarLight</item>
        <item name="toolbarPopupStyle">@style/Theme.AppCompat.Light</item>
        <item name="contentBackgroundColorPrimary">?attr/colorPrimary</item>
        <item name="contentBackgroundColorSecondary">@color/white</item>
        <item name="authorDecoratedTextColor">@color/white</item>
        <item name="contentLikedColor">@color/reddit_orange</item>
        <item name="contentDislikedColor">@color/reddit_downvote</item>
        <item name="unreadMessageIndicatorColor">@color/orangered</item>
        <item name="cardTopBackgroundColor">@color/white</item>
        <item name="cardTopBackgroundColorLiked">@color/your_pink</item>
        <item name="cardTopBackgroundColorDisliked">@color/lavender_blue</item>
        <item name="cardBackgroundAccentColor">?attr/colorPrimaryDark</item>
        <item name="cardTopTextColor">@color/gray900</item>
        <item name="cardTopTextSecondaryColor">?attr/textColorSecondary</item>
    </style>

    <style name="NightThemeColors" parent="AppThemeDark">
        <!-- AppCompat theme attributes -->
        <item name="colorPrimary">@color/gray800</item>
        <item name="colorPrimaryDark">@color/gray900</item>
        <item name="colorAccent">@color/redA200</item>
        <!-- Custom attributes -->
        <item name="colorPrimaryLight">@color/gray700</item>
        <item name="windowBackgroundColor">@color/gray700</item>
        <!-- TODO double-check these text colors are actually to spec -->
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/gray300</item>
        <item name="textColorInverse">@color/gray900</item>
        <item name="textColorHighlight">@color/white</item>
        <item name="textColorLink">@color/link_color</item>
        <item name="dividerColor">@color/white_20pct</item> <!-- 20% white -->
        <item name="iconColor">@color/white</item>
        <item name="nsfwColor">@color/nsfw_tag_color</item>
        <item name="toolbarStyle">@style/ToolbarDark</item>
        <item name="toolbarPopupStyle">@style/Theme.AppCompat</item>
        <item name="contentBackgroundColorPrimary">?attr/colorPrimary</item>
        <item name="contentBackgroundColorSecondary">@color/gray900</item>
        <item name="authorDecoratedTextColor">@color/white</item>
        <item name="contentLikedColor">@color/reddit_orange</item>
        <item name="contentDislikedColor">@color/reddit_downvote</item>
        <item name="unreadMessageIndicatorColor">@color/orangered</item>
        <item name="cardTopBackgroundColor">@color/gray900</item>
        <item name="cardTopBackgroundColorLiked">@color/your_pink</item>
        <item name="cardTopBackgroundColorDisliked">@color/lavender_blue</item>
        <item name="cardBackgroundAccentColor">@color/gray900</item>
        <item name="cardTopTextColor">@color/white</item>
        <item name="cardTopTextSecondaryColor">@color/gray400</item>
    </style>

</resources>
