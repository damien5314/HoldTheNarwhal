<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StandardThemeColors" parent="AppTheme">
        <!-- AppCompat theme attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Custom attributes -->
        <item name="textColorPrimary">@color/gray900</item>
        <item name="textColorSecondary"></item>
        <item name="textColorLink">@color/link_color</item>
        <item name="cardTopBackgroundColor">@color/white</item>
        <item name="cardBackgroundAccentColor">@color/primary_dark</item>
        <item name="cardTopTextColor">@color/gray900</item>
        <item name="cardTopTextSecondaryColor">@color/secondary_text</item>
    </style>

    <style name="NightThemeColors" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary"></item>
        <item name="textColorLink">@color/link_color</item>
        <item name="cardTopBackgroundColor">@color/gray900</item>
        <item name="cardBackgroundAccentColor">@color/gray800</item>
        <item name="cardTopTextColor">@color/white</item>
        <item name="cardTopTextSecondaryColor">@color/gray400</item>
    </style>

</resources>
