<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/reddit_link_item" />

    <TextView
        android:id="@+id/link_self_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/link_list_item_margin_horizontal"
        android:layout_marginRight="@dimen/link_list_item_margin_horizontal"
        android:textColor="@color/primary_text"
        android:padding="@dimen/link_self_text_padding"
        android:background="@drawable/self_text_background"
        android:bufferType="spannable"/>

</LinearLayout>