<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout">

  <TextView
      tools:text="redditor since April 20, 2008"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/user_created"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toTopOf="@+id/constraintLayout"
      android:layout_marginTop="16dp"/>

  <TextView
      tools:text="58,740"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/user_comment_karma"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@+id/user_created"
      android:layout_marginTop="8dp"/>

  <TextView
      tools:text="113,069"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/user_link_karma"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      app:layout_constraintLeft_toRightOf="@+id/user_comment_karma"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/user_comment_karma"/>

  <TextView
      android:text="@string/user_link_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView4"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@+id/user_link_karma"/>

  <TextView
      android:text="@string/user_comment_score"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView5"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      app:layout_constraintLeft_toLeftOf="@+id/user_link_karma"
      app:layout_constraintTop_toBottomOf="@+id/user_link_karma"/>

  <Button
      tools:text="@string/user_friend_add_button_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/user_friend_button"
      app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@+id/textView4"
      android:layout_marginTop="8dp"/>

  <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:text="@string/user_friend_note_label"
      android:ems="10"
      android:id="@+id/user_friend_note_edit"
      app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      app:layout_constraintTop_toBottomOf="@+id/user_friend_button"
      android:layout_marginTop="8dp"
      app:layout_constraintRight_toLeftOf="@+id/button3"
      android:layout_marginRight="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintHorizontal_bias="0.04"/>

  <Button
      android:text="@string/user_friend_note_save_button"
      android:layout_width="88dp"
      android:layout_height="48dp"
      android:id="@+id/button3"
      app:layout_constraintTop_toTopOf="@+id/user_friend_note_edit"
      app:layout_constraintRight_toRightOf="@+id/constraintLayout"
      android:layout_marginRight="16dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/user_friend_note_edit"/>

</android.support.constraint.ConstraintLayout>