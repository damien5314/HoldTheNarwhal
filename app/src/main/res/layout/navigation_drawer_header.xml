<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/navigation_drawer_header"
             android:layout_width="fill_parent"
             android:layout_height="@dimen/navigation_drawer_header_height"
             android:background="@color/primary_dark">

    <ImageView
        android:id="@+id/navigation_drawer_header_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="start|top"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_gravity="start|bottom">

        <ImageView
            android:id="@+id/user_account_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_gilded_2"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:textColor="#ffffff"
            android:textSize="@dimen/navigation_drawer_account_name_text"
            android:textStyle="bold"
            tools:text="andrewsmith1984" />

        <ImageView
            android:id="@+id/sign_out_button"
            android:contentDescription="@string/dialog_sign_out_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/navigation_drawer_icon_margin"
            android:layout_marginRight="@dimen/navigation_drawer_icon_margin"
            android:src="@drawable/ic_sign_out"/>

    </LinearLayout>

</FrameLayout>