<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Show these to all users -->
    <PreferenceCategory
            android:title="@string/preferences_app">

        <CheckBoxPreference
                android:key="pref_allow_analytics"
                android:title="@string/pref_allow_analytics"
                android:defaultValue="false" />

        <ListPreference
                android:key="pref_font"
                android:title="@string/pref_font"
                android:entries="@array/pref_font_entries"
                android:entryValues="@array/pref_font_values"
                android:defaultValue="@string/font_system_value" />

        <Preference
                android:key="pref_about_app"
                android:title="@string/pref_about_app" />

    </PreferenceCategory>

</PreferenceScreen>
