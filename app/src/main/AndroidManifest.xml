<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ddiehl.android.htn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:name="com.ddiehl.android.htn.HoldTheNarwhal"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:supportsRtl="true">

        <meta-data
                android:name="io.fabric.ApiKey"
                android:value="eaccaaf37ee22836fe15fff1daa0c745f6e061e2" />

        <activity
                android:name=".view.activities.DeepLinkDispatcher"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="reddit.com" />
                <data android:host="*.reddit.com" />
                <data android:pathPattern="" />
                <data android:pathPattern="/" />
                <data android:pathPattern="/hot" />
                <data android:pathPattern="/new" />
                <data android:pathPattern="/rising" />
                <data android:pathPattern="/controversial" />
                <data android:pathPattern="/top" />
                <data android:pathPattern="/r/.*" />
                <data android:pathPattern="/u/.*" />
                <data android:pathPattern="/user/.*" />
            </intent-filter>
        </activity>

        <activity
                android:name=".listings.subreddit.SubredditActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".view.activities.LinkCommentsActivity" />

        <activity
                android:name=".listings.inbox.InboxActivity" />

        <activity
                android:name=".listings.profile.UserProfileActivity" />

        <activity
                android:name=".view.activities.PrivateMessageActivity" />

        <activity
                android:name=".view.activities.SettingsActivity" />

        <activity
                android:name=".view.activities.AboutAppActivity" />

        <activity
                android:name=".view.activities.WebViewActivity" />

        <activity
                android:name="rxreddit.android.SignInActivity" />

        <activity
                android:name=".subscriptions.SubscriptionManagerActivity" />

        <activity
                android:name=".subredditinfo.SubredditInfoActivity" />

    </application>

</manifest>
